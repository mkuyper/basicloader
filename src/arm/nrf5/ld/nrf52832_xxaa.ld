MEMORY {
    SD_RAM(xrw) : ORIGIN = 0x20000000, LENGTH = 12K
    RAM(xrw)    : ORIGIN = 0x20000000+12K, LENGTH = 64K-12K

    MBR(rx)     : ORIGIN = 0x00000000, LENGTH = 4K-8
    MBRCFG(rx)  : ORIGIN = 0x00000FF8, LENGTH = 8

    SOFTDEVICE  : ORIGIN = 0x00001000, LENGTH = 148K

    BLFLASH(rx) : ORIGIN = 0x00001000+148K, LENGTH = 4K
    FWFLASH(rx) : ORIGIN = 0x00001000+148K+4K, LENGTH = 512K-148K-4K
}
